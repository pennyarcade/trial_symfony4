{% extends 'skeleton.html.twig' %}

{% block title %}News index{% endblock %}
{% block heading %}<h1>News index</h1>{% endblock %}

{% block main %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Headline</th>
                <th>Body</th>
                <th>Date</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news in news %}
            <tr>
                <td>{{ news.id }}</td>
                <td>{{ news.headline }}</td>
                <td>{{ news.body }}</td>
                <td>{{ news.date|date("m/d/Y H:M") }}</td>
                <td>{{ news.category.name }}</td>
                <td>
                    <a href="{{ path('news_show', {'id': news.id}) }}">show</a>
                    <a href="{{ path('news_edit', {'id': news.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('news_new') }}">Create new</a>
{% endblock %}