{% extends 'skeleton.html.twig' %}

{% block title %}News{% endblock %}
{% block heading %}    <h1>News</h1>{% endblock %}

{% block main %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ news.id }}</td>
            </tr>
            <tr>
                <th>Headline</th>
                <td>{{ news.headline }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ news.body }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ news.date|date("m/d/Y H:M") }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ news.category }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('news_index') }}">back to list</a>

    <a href="{{ path('news_edit', {'id': news.id}) }}">edit</a>

    {{ include('news/_delete_form.html.twig') }}
{% endblock %}